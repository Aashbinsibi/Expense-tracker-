// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String        @id @default(uuid())
  name            String
  email           String        @unique
  passwordHash    String        @map("password_hash")
  currency        String        @default("INR")
  monthStartDay   Int           @default(1) @map("month_start_day")
  timezone        String        @default("Asia/Kolkata")
  createdAt       DateTime      @default(now()) @map("created_at")
  
  categories      Category[]
  transactions    Transaction[]
  passwordResets  PasswordReset[]

  @@map("users")
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_resets")
}

model Category {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  type      String   // 'expense', 'income', 'both'
  color     String   @default("#666")
  isActive  Boolean  @default(true) @map("is_active")
  
  user      User     @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("categories")
}

model Transaction {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  amount          Decimal  @db.Decimal(12, 2)
  type            String   // 'expense', 'income'
  categoryId      String   @map("category_id")
  paymentMethod   String   @map("payment_method") // 'cash', 'upi', 'card', 'wallet', 'other'
  note            String?
  transactionAt   DateTime @map("transaction_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @map("updated_at")
  
  // For offline sync
  isSynced        Boolean  @default(false) @map("is_synced")
  deletedAt       DateTime? @map("deleted_at")

  user            User     @relation(fields: [userId], references: [id])
  category        Category @relation(fields: [categoryId], references: [id])

  @@map("transactions")
}
